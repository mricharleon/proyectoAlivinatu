{% extends 'AlivinatuBundle::layout.html.twig' %}
    
{% block title %}
    Admin. Servicio
{% endblock %}

{% block contenido %}     
    <div id="contenido">
        
        <div id="cajaContenido">
            <div id="tituloForm"><b>Administración de Servicios</b> | Administra todos los Servicios</div>
            <form id="formAdminClienteBuscar" action="{{ path('adminServicio') }}" method="POST">
                <spam id="tituloAdminCU">Ingresa Criterio de Búsqueda</spam>
                <input type="text" id="inputCUBuscar" name="datoBuscar" placeholder="Ingresa tu búsqueda" />
                
                <input id="botonCUBuscar" type="submit" value="Buscar">
                <a href="{{ path('adminServicio') }}"><span id="botonCU">Restaurar</span></a>
                <a href="{{ path('registroServicio') }}"><span id="botonCU">Nuevo Servicio</span></a>
                <a href="{{ path('menuAdmin') }}"><span id="botonCU">Menu</span></a>
            </form>
            <div id="cajaScroll">
                <table cellspacing="0" cellpadding="0">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Costo</th>
                    <th>Descripción</th>
                    <th>Opciones</th>
                </tr>
            </thead>

            <tbody>
                {% for servicio in servicios %}
                    
                <tr>
                    <td>{{ servicio.nombre }}</td>
                    <td>${{ servicio.costo }}</td>
                    <td>{{ servicio.descripcion }}</td>
                    <td>
                        <a href="{{ path('editarServicio', { 'id': servicio.id }) }}">Editar</a>
                        <a href="{{ path('borrarServicio', { 'id': servicio.id }) }}">Borrar</a>
                    </td>
  
                </tr>
                {% else %}
                <tr>
                    <td colspan="5">No existe ningun Servicio</td>
                </tr>
                {% endfor %}
                
                
            </tbody>
        </table>
                </div>
        </div>

    </div>
{% endblock %}



