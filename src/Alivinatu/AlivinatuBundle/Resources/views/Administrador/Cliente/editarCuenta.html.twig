{% extends 'AlivinatuBundle::layout.html.twig' %}
    
{% block title %}
    Editar Cuenta
{% endblock %}
    
{% block contenido %}   
<div id="contenido">
    {% block tituloContenido %}
        
        <hr>
        <div id="tituloOferta">Edición de cuenta Alivinatu</div>
        <hr>
    {% endblock %}
    
        <div id="notaForm"><b><u>NOTA:</u></b> Bienvenido(a) al Sistema de Edición de una Cuenta Alivinatu, para la 
            correcta edición de la cuenta se solicita muy comedidamente ingresar TODOS LOS CAMPOS que se exponen a continuación. </div>
    <form action="{{ path('editarCliente',{ 'id':id } ) }}" method="post" id="formRegistro" >

        <div id="grid1">
            
            <div id="tituloForm"><b>Ingresa</b> | Datos de Usuario</div>
            {#<div id="barra">&nbsp;</div>#}
            
            {{ form_errors(formAdmin.usuario) }}
                {{ form_label(formAdmin.usuario) }}
                {{ form_widget(formAdmin.usuario) }}
            
            
            {{ form_errors(formAdmin.password.first) }}
                {{ form_label(formAdmin.password.first, 'Contraseña') }}
                {{ form_widget(formAdmin.password.first) }}
           
            
            {{ form_errors(formAdmin.password.second) }}
                {{ form_label(formAdmin.password.second, 'Verifica Contraseña') }}
                {{ form_widget(formAdmin.password.second) }}

            
            {{ form_errors(formAdmin.nombre) }}
                {{ form_label(formAdmin.nombre) }}
                {{ form_widget(formAdmin.nombre) }}
            
            {{ form_errors(formAdmin.apellido) }}
                {{ form_label(formAdmin.apellido) }}
                {{ form_widget(formAdmin.apellido) }}
            
            {{ form_errors(formAdmin.cedula) }}
                {{ form_label(formAdmin.cedula) }}
                {{ form_widget(formAdmin.cedula) }}
            
            {{ form_errors(formAdmin.genero) }}
                {{ form_label(formAdmin.genero) }}
                {{ form_widget(formAdmin.genero) }}
            
            {{ form_errors(formAdmin.fNacimiento) }}
                {{ form_label(formAdmin.fNacimiento) }}
                
            <input id="datepicker" name="usuario_form[fNacimiento]" required="required" />
            
            {{ form_errors(formAdmin.rol) }}
                {{ form_label(formAdmin.rol) }}
                {{ form_widget(formAdmin.rol) }}
        
        </div>
            
            
        <div id="grid0"> &nbsp;
        </div>
            
        <div id="grid2">
            <div id="tituloForm"><b>Ingresa</b> | Datos de Contacto</div>
            {#<div id="barra">&nbsp;</div>#}
            
            {{ form_errors(formAdmin.celular) }}
                {{ form_label(formAdmin.celular) }}
                {{ form_widget(formAdmin.celular) }}
            
            {{ form_errors(formAdmin.telefono) }}
                {{ form_label(formAdmin.telefono) }}
                {{ form_widget(formAdmin.telefono) }}
            
            {{ form_errors(formAdmin.email) }}
                {{ form_label(formAdmin.email) }}
                {{ form_widget(formAdmin.email) }}
            
            {{ form_errors(formAdmin.provincia) }}
                {{ form_label(formAdmin.provincia) }}
                {{ form_widget(formAdmin.provincia) }}
            
            {{ form_errors(formAdmin.ciudad) }}
                {{ form_label(formAdmin.ciudad) }}
                {{ form_widget(formAdmin.ciudad) }}
            
            {{ form_errors(formAdmin.calle) }}
                {{ form_label(formAdmin.calle) }}
                {{ form_widget(formAdmin.calle) }}
            
            {{ form_errors(formAdmin.observacion) }}
                {{ form_label(formAdmin.observacion) }}
                {{ form_widget(formAdmin.observacion, { 'attr': { 'wrap': 'soft' } }) }}
            
            <a href="{{ path('adminCliente') }}"><span id="botonForm2">Cancelar</span></a>
            <input id="botonForm" type="submit" value="Actualizar" />
            
        </div>
          
        
    </form>

    </div>
{% endblock %}