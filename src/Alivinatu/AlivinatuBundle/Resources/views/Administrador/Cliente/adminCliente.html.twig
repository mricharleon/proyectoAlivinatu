{% extends 'AlivinatuBundle::layout.html.twig' %}
    
{% block title %}
    Admin. Cliente
{% endblock %}

{% block contenido %}     
    <div id="contenido">
        
        <div id="cajaContenido">
            <div id="tituloForm"><b>Administración de Cliente</b> | Administra todas las cuentas de usuario</div>
            <form id="formAdminClienteBuscar" action="{{ path('adminCliente') }}" method="POST">
                <spam id="tituloAdminCU">Ingresa Criterio de Búsqueda</spam>
                <input type="text" id="inputCUBuscar" name="datoBuscar" placeholder="Ingresa tu búsqueda" />
                
                <input id="botonCUBuscar" type="submit" value="Buscar">
                <a href="{{ path('adminCliente') }}"><span id="botonCU">Restaurar</span></a>
                <a href="{{ path('registroAdmin') }}"><span id="botonCU">Nueva Cuenta</span></a>
                <a href="{{ path('menuAdmin') }}"><span id="botonCU">Menu</span></a>
            </form>
            <div id="cajaScroll">
                <table cellspacing="0" cellpadding="0">
            <thead>
                <tr>
                    <th>Cédula</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Fecha de Nacimiento</th>
                    <th>Usuario</th>
                    <th>Ciudad</th>
                    <th>Teléfono</th>
                    <th colspan="2">Opciones</th>
                </tr>
            </thead>

            <tbody>
                {% for cuenta in cuentas %}
                    
                <tr>
                    <td>{{ cuenta.cedula }}</td>
                    <td>{{ cuenta.nombre }}</td>
                    <td>{{ cuenta.apellido }}</td>
                    <td>{{ cuenta.fNacimiento }}</td>
                    <td>{{ cuenta.usuario }}</td>
                    <td>{{ cuenta.ciudad }}</td>
                    <td>{{ cuenta.telefono }}</td>
                    <td>
                        <a href="{{ path('editarCliente', { 'id': cuenta.id }) }}">Editar</a>
                    </td>
                    <td>
                        <a href="{{ path('borrarCliente', { 'id': cuenta.id }) }}">Borrar</a>
                    </td>
  
                </tr>
                {% else %}
                <tr>
                    <td colspan="5">No existe ninguna cuenta</td>
                </tr>
                {% endfor %}
                
                
            </tbody>
        </table>
                </div>
        </div>

    </div>
{% endblock %}



