{% extends 'AlivinatuBundle::layout.html.twig' %}

{% block title %}Editar Sala{% endblock %}

{% block contenido %}
      
<div id="contenido">
    
    {% block tituloContenido %}
        
        <hr>
        <div id="tituloOferta">Editar Sala</div>
        <hr>
    {% endblock %}
    
        <div id="notaForm"><b><u>NOTA:</u></b> Bienvenido(a) al Sistema de Edición de una Sala Alivinatu, para la 
            correcta edición de la sala se solicita muy comedidamente ingresar TODOS LOS CAMPOS que se exponen a continuación. </div>
        
    
        
    <form action="{{ path('editarSala', { 'id':id }) }}" method="post" id="formRegistro" >

        <div id="grid1">
            
            <div id="tituloForm"><b>Edita</b> | Datos de Sala</div>
            {#<div id="barra">&nbsp;</div>#}
            
            {{ form_errors(formSala.numero) }}
                {{ form_label(formSala.numero) }}
                {{ form_widget(formSala.numero) }}
            
            
            {{ form_errors(formSala.nombreSala) }}
                {{ form_label(formSala.nombreSala) }}
                {{ form_widget(formSala.nombreSala) }}
           
            
            {{ form_errors(formSala.estado) }}
                {{ form_label(formSala.estado) }}
                {{ form_widget(formSala.estado) }}

            
            {{ form_errors(formSala.descripcion) }}
                {{ form_label(formSala.descripcion) }}
                {{ form_widget(formSala.descripcion) }}
            
            <a href="{{ path('adminSala') }}"><span id="botonForm2">Cancelar</span></a>
            <input id="botonForm" type="submit" value="Actualizar" />
        
        </div>

    </form>
    
</div>

{% endblock %}
